#!/usr/bin/env php
<?php

$currentDir = getcwd();

$autoloadPath = "{$currentDir}/vendor/autoload.php'";
if (!file_exists($autoloadPath)) {
    echo 'Autoload not found.';
    exit(1);
}

require_once $autoloadPath;

$configurationPath = "{$currentDir}/config/generation.php";
if (! file_exists($configurationPath)) {
    echo 'The Blade Icons generator configuration file could not be found.';
    echo "Please create one at: {$configurationPath}";
    exit(1);
}

$packageGenerateCommand = require $configurationPath;
$packageGenerateCommand->run();